{
    "version": 2,
    "cleanUrls": true,
    "trailingSlash": false,
    "public": true,
    "builds": [
        { "src": "*.html", "use": "@vercel/static" },
        { "src": "destinations/*.html", "use": "@vercel/static" }
    ],
    "routes": [
        { "src": "/", "dest": "/index.html" },
        { "src": "/destinations/([^/]+)", "dest": "/destinations/$1.html" },
        {
            "src": "/public/(.*)",
            "headers": { "cache-control": "public, max-age=31536000, immutable" },
            "continue": true
        },
        {
            "src": "/(.*)\\.(?:js|css|svg|ico)$",
            "headers": { "cache-control": "public, max-age=31536000, immutable" },
            "continue": true
        }
    ]
}