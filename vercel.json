{
    "version": 2,
    "cleanUrls": true,
    "trailingSlash": false,
    "builds": [
        { "src": "*.html", "use": "@vercel/static" },
        { "src": "destinations/*.html", "use": "@vercel/static" }
    ],
    "rewrites": [
        { "source": "/", "destination": "/index.html" },
        { "source": "/destinations/:path*", "destination": "/destinations/:path*.html" }
    ],
    "headers": [
        {
            "source": "/public/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*)\\.(?:js|css|svg|ico)$",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}